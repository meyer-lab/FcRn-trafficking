pipeline {
  agent any
  stages {
    stage('Clean') {
      steps { sh 'git clean -ffdx' }
    }
    stage('Test') {
      steps {
        sh 'Rscript -e \"covr::to_cobertura(covr::package_coverage(\'./fcrn\', quiet = F))\"'
      }
    }
    stage('Build') {
      steps {
        sh 'R CMD INSTALL --no-multiarch --with-keep.source fcrn'
        sh 'R -e \"library(fcrn); fcrn::full_plot()\"'
        sh 'pandoc -o README.pdf README.md'
      }
    }
    stage('Report') {
      steps {
        archiveArtifacts artifacts: 'output.pdf', onlyIfSuccessful: true
        step([
          $class: 'CoberturaPublisher',
          autoUpdateHealth: true,
          autoUpdateStability: true,
          coberturaReportFile: 'cobertura.xml',
          failNoReports: true,
          failUnhealthy: true,
          failUnstable: true,
          sourceEncoding: 'UTF_8',
          zoomCoverageChart: true])
      }
    }
  }
}
