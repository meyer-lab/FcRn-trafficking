pipeline {
  agent any
  stages {
    stage('Clean') {
      steps { sh 'git clean -ffdx' }
    }
    stage('Setup Environment') {
      steps {
        sh 'R -e \"install.packages(\'packrat\'); packrat::restore()\"'
      }
    }
    stage('Test') {
      steps {
        sh 'Rscript --default-packages=methods -e \"devtools::test(\'./fcrn\')\"'
      }
    }
    stage('Build') {
      steps {
        sh 'echo Build'
      }
    }
  }
}
